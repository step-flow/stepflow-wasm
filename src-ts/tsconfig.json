{
  "compilerOptions": {
    "outDir": "../pkg/",
    "sourceMap": true,
    "inlineSources": true,
    "module": "es6",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
